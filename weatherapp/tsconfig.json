{
  "compilerOptions": {
    "target": "esnext",
    "jsx": "react-jsx",
    "lib": ["esnext", "dom"],
    "module": "node16",
    "moduleResolution": "node16",
    "types": ["vitest/globals"],
    "strict": true,
    "declaration": true,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx", "./vitest.setup.ts"],
  "exclude": ["node_modules"]
}
